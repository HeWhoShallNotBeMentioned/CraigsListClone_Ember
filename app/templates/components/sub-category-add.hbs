{{yield}}

{{#if newSubCategory}}
  <form>
    <div class="form-group">
      <label>Title:</label>
      {{input value=title id="title" class="form-control"}}
    </div>
      <button class="btn btn-danger" {{action "hideSubCategoryForm"}}>Cancel</button>
      <button class="btn btn-success" {{action "addSubCategory"}}>Save</button>
  </form>
{{else}}

<button class="btn btn-info"{{action "showSubCategoryForm"}}>Add subCategory</button>
{{/if}}
