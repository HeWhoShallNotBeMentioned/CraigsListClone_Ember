{{#if updateSubCategory}}
  <form>
    <div class=form-group>
      <label>Enter Title:</label>
      {{input value=subCategory.title id='title' class='form-control'}}
    </div>
    <button class='btn btn-success' {{action 'editSubCategory' subCategory}}>Save</button>
  </form>
{{else}}
  <button class='btn btn-info button-inline' {{action 'showUpdateForm'}}>Edit</button>
{{/if}}
